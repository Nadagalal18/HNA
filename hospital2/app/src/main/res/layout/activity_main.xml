<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/isa"
    style="@style/Base.DialogWindowTitleBackground.AppCompat"
    >




         <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/text1"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:id="@+id/edit1"
        android:ems="10"
             android:gravity="center"
             android:layout_marginTop="330dp"
             android:background="@drawable/border"
        android:backgroundTint="#a4f8f8fa"
        />



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp"
        android:text="@string/b1"
        android:textSize="25sp"
        android:gravity="center"
        android:fontFamily="sans-serif"
        android:id="@+id/button1"
        android:background="@drawable/border"
        android:backgroundTint="#9c1990d1"

         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to HNA Hospital"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="30sp"

        android:textColor="#040010"
        />
<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Register"
    android:textSize="25sp"
    android:textColor="#040010"
    android:layout_marginTop="500dp"
    android:fontFamily="sans-serif"
    android:id="@+id/button2"
    android:background="@drawable/border"
    android:backgroundTint="#9c1990d1"
    />
</RelativeLayout>