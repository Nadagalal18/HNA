<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".data_of_new_patient">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Enter Your Data"
         android:layout_marginTop="30dp"
         android:layout_centerHorizontal="true"
         android:id="@+id/data"
         android:textSize="25sp"
         android:textColor="@color/colorPrimaryDark"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text3"
        android:layout_below="@id/data"
        android:id="@+id/first"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/first"
        android:textSize="20sp"
        android:id="@+id/lastname"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text4"
        android:layout_below="@+id/first"
        android:id="@+id/last"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text8"
        android:layout_below="@+id/last"
        android:id="@+id/i"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:layout_below="@+id/i"
        android:id="@+id/e"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e"
        android:hint="Age"
        android:id="@+id/ag"

        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ag"
        android:hint="Phone number"
        android:id="@+id/ph"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Gender"
        android:layout_below="@+id/ph"
        android:id="@+id/gend"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textSize="20sp"
        android:layout_below="@+id/gend"
        android:id="@+id/bt3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        />
</RelativeLayout>